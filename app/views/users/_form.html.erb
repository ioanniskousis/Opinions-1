<%= form_with(model: user, local: true) do |form| %>


  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :fullname %>

    <%= form.text_field :fullname %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="field">
    <%= form.label :coverimage %>
    <%= form.file_field :coverimage %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
