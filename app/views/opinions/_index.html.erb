<%= form_for(@opinion) do |form| %>
  <%= form.label 'Your Opinion' %>
  <%= form.text_field :text, id: :post_text, 
    class: 'form-control', autofocus: true, placeholder: 'Add Your Opinion' 
  %>
  <% if @opinion.errors.full_messages.any? %>
    <p class="errors">
      <%= "Opinion could not be saved. #{@opinion.errors.full_messages.join('. ')}" %>
    </p>
  <% end %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<h1>Opinions</h1>


<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.author.username + ' : ' + opinion.text %></td>
        <td><%#= link_to 'Show', opinion %></td>
        <td><%#= link_to 'Edit', edit_opinion_path(opinion) %></td>
        <td><%#= link_to 'Destroy', opinion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

